<Window x:Class="Desktop.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border Width="500" Height="400" Style="{StaticResource borderSecondary}">
            <StackPanel>
                <Label Style="{StaticResource text}">This is normal text</Label>
                <Label Style="{StaticResource h2}">This is h2</Label>
                <Label Style="{StaticResource h1}">This is h1</Label>
                <Button Style="{StaticResource controlSecondary}">Button</Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
