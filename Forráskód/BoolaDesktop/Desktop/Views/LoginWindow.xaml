<UserControl x:Class="Desktop.Views.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop.Views"
              xmlns:vm="clr-namespace:Desktop.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,100,0,0"/>
        <TextBox Height="25" Width="200" Text="{Binding Login.email}" TextAlignment="Center" Margin="0,0,0,100"/>
        <TextBox Height="25" Width="200" Text="{Binding Login.Password}" TextAlignment="Center" Margin="0,0,0,0"/>
        <Button Height="25" Width="100" Content="Login" Margin="0,100,0,0" Command="{Binding LogonCommand}"/>
        <Button Height="25" Width="100" Content="Register" Margin="0,200,0,0"/>

    </Grid>
</UserControl>
